@model SeminarMVC.Models.Predbiljezba

@{
    ViewBag.Title = "Edit";
    var check1 = "";
    var check2 = "";

    if (Model.Active == true)
    {
        check1 = "checked";
    }
    else
    {
        check2 = "checked";
    }
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="text-center">Uredite "<a style="color: red">@Model.Ime</a>" predbiljezbu za seminar koji pocinje [<a style="color: red">@Model.Datum.ToShortDateString()</a>]</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" name="IdPredbiljezba" value="@Model.IdPredbiljezba" />


        <div class="form-group">
            <label class="control-label col-md-5 col-xs-4">Naziv seminara</label>
            <div class="col-md-7 col-xs-8">
                @Html.DropDownList("IdSeminar",  (SelectList)ViewBag.lista  , new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.IdPredbiljezba, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "control-label col-md-5 col-xs-4" })
            <div class="col-md-7 col-xs-8">
                <input type="text" name="Datum" value="@Model.Datum.ToShortDateString()" class="form-control" />
                @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ime, htmlAttributes: new { @class = "control-label col-md-5 col-xs-4" })
            <div class="col-md-7 col-xs-8">
                @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prezime, htmlAttributes: new { @class = "control-label col-md-5 col-xs-4" })
            <div class="col-md-7 col-xs-8">
                @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Adresa, htmlAttributes: new { @class = "control-label col-md-5 col-xs-4" })
            <div class="col-md-7 col-xs-8">
                @Html.EditorFor(model => model.Adresa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Adresa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-5 col-xs-4" })
            <div class="col-md-7 col-xs-8">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Telefon, htmlAttributes: new { @class = "control-label col-md-5 col-xs-4" })
            <div class="col-md-7 col-xs-8">
                @Html.EditorFor(model => model.Telefon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label col-md-5 col-xs-4" })
            <div class="col-md-7 col-xs-8">
                <div class="checkbox" style="padding-left: 0px;">
                    <input type="radio" name="Active" value="true" @check1/> YES       |
                    <input type="radio" name="Active" value="false" @check2 /> NO 
                    @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-8">
                <input type="submit" value="Edit" class="btn btn-warning" />
                | <a href="~/Predbiljezbe/Index" class="btn btn-default"> Back </a>
            </div>
        </div>
    </div>
}


