@model IEnumerable<SeminarMVC.Models.Seminar>

    @{
        ViewBag.Title = "Index";
        string check = ""; 
    }

    <h4 class="text-center">Popis svih seminara.</h4>
    <hr />
    <div class="text-center">
         <a style="" class="btn btn-success btn" href="~/Seminari/Create">Novi Seminar</a> 
    </div>
    <hr />

    <table class="table table-bordered">
        <thead>
            <tr>
                <td class="text-center">Akcija</td>
                <td>Naziv</td>
                <td>Opis</td>
                <td>Datum</td>
                <td>Popunjen</td>
                <td class="text-center">Broj Polaznika</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var seminar in Model)
            {
                <tr>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a href="~/Seminar/Edit/@seminar.IdSeminar" class="btn btn-warning">
                                Uredi
                            </a>
                            <a href="~/Seminar/Delete/@seminar.IdSeminar" class="btn btn-danger"> Obriši</a>
                        </div>
                    </td>
                    <td>
                        @seminar.Naziv
                    </td>
                    <td>
                        @seminar.Opis
                    </td>
                    <td>
                        @seminar.Datum.ToShortDateString()
                    </td>
                    <td class="text-center">
                        @if (seminar.Popunjen == true)
                        { check = "checked";  }
                        else { check = ""; }
                        <input type="checkbox" name="Popunjen" value="@seminar.Popunjen" disabled @check  />
                    </td>
                    <td class="text-center">
                        @seminar.Broj()
                    </td>
                </tr>
            }
        </tbody>
    </table>
